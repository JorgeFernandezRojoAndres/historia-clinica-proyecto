extends layout

block content
  .container.mt-4
    .card.shadow-lg
      .card-header.bg-primary.text-white.d-flex.justify-content-between.align-items-center
        h3.mb-0 üå¥ Vacaciones M√©dicos
        a.btn.btn-light.btn-sm(href="/admin/dashboard") ‚Üê Volver al Dashboard

      .card-body
        form(action="/admin/vacaciones" method="POST")
          .row.g-3
            .col-md-4
              label.form-label(for="idMedico") M√©dico
              select.form-control(name="idMedico" required)
                each medico in medicos
                  option(value=medico.idMedico)= medico.nombre
            .col-md-3
              label.form-label(for="fechaInicio") Fecha inicio
              input.form-control(type="date" name="fechaInicio" required)
            .col-md-3
              label.form-label(for="fechaFin") Fecha fin
              input.form-control(type="date" name="fechaFin" required)
            .col-md-2.d-flex.align-items-end
              button.btn.btn-success.w-100(type="submit") ‚ûï Agregar

        hr.my-4

        if vacaciones.length
          table.table.table-striped.table-hover
            thead.table-dark
              tr
                th M√©dico
                th Inicio
                th Fin
                th.text-center Acciones
            tbody
              each vac in vacaciones
                tr
                  td= vac.medico
                  td= new Date(vac.fechaInicio).toLocaleDateString('es-AR')
                  td= new Date(vac.fechaFin).toLocaleDateString('es-AR')
                  td.text-center
                    form.d-inline(action=`/admin/vacaciones/${vac.idVacacion}?_method=DELETE` method="POST" onsubmit="return confirmarEliminar(event)")
                      button.btn.btn-danger.btn-sm(type="submit") Eliminar
        else
          .alert.alert-info.text-center No hay vacaciones cargadas a√∫n
