extends layout

block content
  .container.mt-4
    .card.shadow-lg
      .card-header.bg-warning.text-white.d-flex.justify-content-between.align-items-center
        h3.mb-0 üå¥ Vacaciones de M√©dicos
        a.btn.btn-light.btn-sm(href="/admin/dashboard") ‚Üê Volver al Dashboard

      .card-body
        form(action="/admin/vacaciones" method="POST")
          .row.g-3
            .col-md-4
              label.form-label(for="idMedico") M√©dico
              select.form-select(name="idMedico" required)
                each medico in medicos
                  option(value=medico.idMedico)= medico.nombre
            .col-md-3
              label.form-label(for="fechaInicio") Fecha Inicio
              input.form-control(type="date" id="fechaInicio" name="fechaInicio" required)
            .col-md-3
              label.form-label(for="fechaFin") Fecha Fin
              input.form-control(type="date" id="fechaFin" name="fechaFin" required)
            .col-md-2.d-flex.align-items-end
              button.btn.btn-success.w-100(type="submit") ‚ûï Agregar

        hr.my-4

        if vacaciones.length
          table.table.table-striped
            thead
              tr
                th M√©dico
                th Desde
                th Hasta
                th Acciones
            tbody
              each v in vacaciones
                tr
                  td= v.medico
                  td= new Date(v.fechaInicio).toLocaleDateString('es-AR')
                  td= new Date(v.fechaFin).toLocaleDateString('es-AR')
                  td
                    form.d-inline(action=`/admin/vacaciones/${v.idVacacion}?_method=DELETE` method="POST")
                      button.btn.btn-danger.btn-sm(type="submit") ‚ùå Eliminar
        else
          .alert.alert-info.text-center No hay vacaciones cargadas
