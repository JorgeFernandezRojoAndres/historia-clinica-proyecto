extends layout

block content
  h2 Listado de Historias Cl√≠nicas

  table
    tr
      th Paciente
      th Detalles
      th Acciones
    each historia in historias
      tr
        td= historia.nombrePaciente 
        td= historia.detalles
        td
          if user.role === 'secretaria'
            a(href=`/secretaria/historias/${historia.idHistoria}` class="btn btn-sm btn-info") Ver Historial

          if user.role === 'paciente'
            a.btn(href=`/historias/download/${historia.idHistoria}`) Descargar PDF
