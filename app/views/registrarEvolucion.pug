doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Registrar Evolución
    link(rel="stylesheet" href="/css/style.css")

  body
    h1 Registrar Evolución

    // Formulario para registrar la evolución del paciente
    form(action="/medicos/registrar-evolucion" method="POST")
      // Campo oculto para enviar el ID del paciente
      input(type="hidden" name="idPaciente" value=idPaciente)

      // Campo de texto para mostrar el nombre del paciente (solo lectura)
      label(for="paciente") Paciente:
      input#paciente(type="text" name="paciente" readonly value=paciente)

      // Campo para ingresar los detalles de la evolución
      label(for="detallesEvolucion") Detalles de la Evolución:
      textarea#detallesEvolucion(name="detallesEvolucion" rows="4" required)

      // Botón de envío
      button(type="submit") Guardar Evolución

    // Mostrar mensaje de error si existe
    if error
      p.error= error

    // Mostrar mensaje de éxito si existe
    if success
      p.success= success

    // Incluir el archivo de validación desde la carpeta utils
    script(src="/utils/validarFormularioEvolucion.js")
