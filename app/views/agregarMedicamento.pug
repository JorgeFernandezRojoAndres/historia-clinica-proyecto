doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Agregar Medicamento
    link(rel="stylesheet" href="/css/style.css")

  body
    h1 Agregar Medicamento

    // Formulario para agregar un medicamento al paciente
    form(action="/medicos/medicamentos" method="POST")
      // Campo oculto para enviar el ID del paciente
      input(type="hidden" name="idPaciente" value=idPaciente)

      // Campo de texto para mostrar el nombre del paciente (solo lectura)
      label(for="paciente") Paciente:
      input#paciente(type="text" name="paciente" readonly value=paciente)

      // Campo para ingresar el medicamento
      label(for="medicamento") Medicamento:
      textarea#medicamento(name="medicamento" rows="4" required)

      // Botón de envío
      button(type="submit") Guardar Medicamento

    // Mostrar mensaje de error si existe
    if error
      p.error= error

    // Mostrar mensaje de éxito si existe
    if success
      p.success= success
