extends layout

block content
  h2 Editar Médico
  form(action=`/medicos/update/${medico.idMedico}` method="POST")

    label(for="nombre") Nombre:
    input(type="text" name="nombre" value=medico.nombre required)
    br
    label(for="dni") DNI:
    input(type="text" name="dni" value=medico.dni required)
    br

    label(for="especialidad") Especialidad:
    input(type="text" name="especialidad" value=medico.especialidad required)
    br

    label(for="telefono") Teléfono:
    input(type="text" name="telefono" value=medico.telefono required)
    br

    label(for="email") Email:
    input(type="email" name="email" value=medico.email required)
    br

    button(type="submit") Actualizar Médico
