extends layout.pug

block content
  h1 Listado de Médicos 
  a(href="/medicos/new") Agregar Nuevo Médico


  table
    thead
      tr
        th ID
        th Nombre
        th Especialidad
        th Teléfono
        th Email
        th DNI
        th Acciones
    tbody
      each medico in medicos
        tr
          td= medico.idMedico
          td= medico.nombre
          td= medico.especialidad
          td= medico.telefono
          td= medico.email
          td= medico.dni
          td
            a(href=`/medicos/edit/${medico.idMedico}`) Editar
            |  
            a(href=`/medicos/delete/${medico.idMedico}` onclick="return confirm('¿Estás seguro de que deseas eliminar a este médico?');") Eliminar
