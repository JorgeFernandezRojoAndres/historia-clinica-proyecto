extends layout

block content
  div.login-container
    div.form-container
      h2 Iniciar Sesión
      form(action="/login/paciente" method="POST")
        div
          label(for="dni") DNI:
          input(type="text" id="dni" name="dni" required)
        div
          button(type="submit" class="btn btn-primary") Iniciar Sesión
    div.image-container
      img(src="/images/clinica.jpg" alt="Imagen de clínica")
